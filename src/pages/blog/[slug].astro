---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navbar from "../../components/Navbar.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { slugifyTag } from "../../utils/slugifyTag";
import BlogPostNavPrevNext from "../../components/BlogPostNavPrevNext.astro";
import BlogPostRelatedPosts from "../../components/BlogPostRelatedPosts.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const posts = await getCollection("blog");
const sorted = [...posts].sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const index = sorted.findIndex((item) => item.slug === Astro.params.slug);
const previousPost = index + 1 < sorted.length ? sorted[index + 1] : undefined;
const nextPost = index > 0 ? sorted[index - 1] : undefined;
const { Content } = await post.render();

const formatDate = (date) =>
  new Intl.DateTimeFormat("en-GB", {
    year: "numeric",
    month: "short",
    day: "2-digit",
  }).format(date);
---

<BaseLayout title={`${post.data.title} - Andy McDonald`}>
  <Navbar slot="nav" />

  <article class="section post">
    <div class="post-card">
      <header class="post-header">
        <p class="post-date">{formatDate(post.data.date)}</p>
        <h1>{post.data.title}</h1>
        <div class="post-tags">
          {post.data.tags.map((tag) => (
            <span class="tag" data-tag={slugifyTag(tag)}>{tag}</span>
          ))}
        </div>
        <Image class="post-hero" src={post.data.heroImage} alt={post.data.heroImageAlt} />
      </header>
      <div class="post-content">
        <Content />
      </div>
      <BlogPostRelatedPosts relatedPosts={post.data.relatedPosts} />
    </div>
    <BlogPostNavPrevNext previousPost={previousPost} nextPost={nextPost} />
  </article>
</BaseLayout>
